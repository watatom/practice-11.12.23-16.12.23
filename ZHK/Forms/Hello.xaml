<Page x:Class="ZHK.Forms.Hello"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZHK.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" d:Background="SlateGray"
      Title="Hello">
    <Grid VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Foreground="white" HorizontalAlignment="Center" Margin="0 0 0 10" FontSize="40" FontWeight="Bold">Здравствуйте!</TextBlock>
            <TextBlock Foreground="white" HorizontalAlignment="Center" FontSize="20">Чтобы перейти к просмотру объекта, нажмите на одну из кнопок вверху :3</TextBlock>
            <Image  Source="/images/icon.png" HorizontalAlignment="Center" Width="150" VerticalAlignment="Center"></Image>
        </StackPanel>
    </Grid>
</Page>
